PythonAPI/examples/no_rendering_mode.py
PythonAPI/examples/open3d_lidar.py
PythonAPI/examples/sensor_synchronization.py
PythonAPI/examples/show_recorder_*.py
PythonAPI/examples/start_*.py
PythonAPI/examples/stop_*.py
PythonAPI/examples/synchronous_mode.py
PythonAPI/examples/tutorial*.py
PythonAPI/examples/vehicle_*.py
PythonAPI/examples/visualize_*.py
PythonAPI/examples/*Demo*.py
PythonAPI/examples/test_*.py
PythonAPI/examples/master_*.py
PythonAPI/examples/get_*.py
PythonAPI/examples/invertedai_*.py
PythonAPI/examples/nvidia/

# Unused CARLA API files (keep only essential)
PythonAPI/carla/
PythonAPI/util/

# =============================================================================
# EXCLUDE DEVELOPMENT AND EDITOR FILES
# =============================================================================

# IDE files
.vscode/
.idea/
*.iml
*.code-workspace

# OS files
.DS_Store
Thumbs.db
desktop.ini
ehthumbs.db

# Git files (but keep .gitignore)
.git/
# Don't exclude .gitignore itself

# =============================================================================
# INCLUDE RESEARCH FILES (EXPLICITLY WHITELIST)
# =============================================================================

# Documentation and setup
!README.md
!CARLA_Setup_Guide.md
!LICENSE
!CHANGELOG
!Dockerfile

# Research scripts (in PythonAPI/examples/)
!PythonAPI/examples/record_driving_session.py
!PythonAPI/examples/simple_drive.py
!PythonAPI/examples/config.py
!PythonAPI/examples/requirements.txt
!PythonAPI/examples/setup_validation.py
!PythonAPI/examples/conversation_history.md
!PythonAPI/examples/README.md

# Documentation folders
!PythonAPI/examples/docs/
!PythonAPI/examples/docs/**
!PythonAPI/examples/examples/
!PythonAPI/examples/examples/**
!PythonAPI/examples/configs/
!PythonAPI/examples/configs/**

# Keep essential CARLA structure but empty
!PythonAPI/
!PythonAPI/examples/

# =============================================================================
# SECURITY AND PERSONAL DATA
# =============================================================================

# Environment variables and secrets
.env
.secrets
credentials.*
api_keys.*

# Personal files
personal_notes.*
private/
.private/

